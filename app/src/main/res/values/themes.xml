<resources>
    <!-- Base application theme. -->
    <style name="Theme.Template_android" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black01</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="android:colorControlHighlight">@color/black</item>
        <item name="android:textCursorDrawable">@color/black</item>
        <item name="android:colorControlActivated">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey7</item>
        <item name="colorSecondaryVariant">@color/black2_alpha_154</item>
        <item name="colorOnSecondary">@color/black01</item>
        <item name="android:windowBackground">@color/black02</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Template_android.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Template_android.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Template_android.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>