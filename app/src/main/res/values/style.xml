    <!-- Switch -->

    <style name="Switch">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.JBMono.Bold.S14</item>
        <item name="thumbIcon">@drawable/ic_circle</item>
        <item name="thumbIconTint">@color/white</item>
        <item name="trackDecorationTint">@android:color/transparent</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

