    <style name="TextAppearance.JBMono.Bold.S16">
        <item name="android:textSize">@dimen/S16</item>
    </style>

    <style name="TextAppearance.JBMono.Bold.S14">
        <item name="android:textSize">@dimen/S14</item>
    </style>

    <style name="TextAppearance.JBMono.Bold.S18">
        <item name="android:textSize">@dimen/S18</item>
    </style>

    <style name="TextAppearance.JBMono.Bold.S12">
        <item name="android:textSize">@dimen/S12</item>
    </style>

    <style name="TextAppearance.JBMono.Semibold">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="fontFamily">@font/inter_semibold</item>
    </style>

    <style name="TextAppearance.JBMono.Semibold.S32">
        <item name="android:textSize">@dimen/S32</item>
    </style>

    <style name="TextAppearance.JBMono.Semibold.S16">
        <item name="android:textSize">@dimen/S16</item>
    </style>

    <style name="TextAppearance.JBMono.Semibold.S14">
        <item name="android:textSize">@dimen/S14</item>
    </style>

    <style name="TextAppearance.JBMono.Regular">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="TextAppearance.JBMono.Regular.S16">
        <item name="android:textSize">@dimen/S16</item>
    </style>

    <style name="TextAppearance.JBMono.Regular.S14">
        <item name="android:textSize">@dimen/S14</item>
    </style>

    <style name="TextAppearance.JBMono.Regular.S12">
        <item name="android:textSize">@dimen/S12</item>
    </style>

    <!-- Shapes -->

    <style name="ShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearance.32">
        <item name="cornerSize">@dimen/corner_radius_32</item>
    </style>

    <style name="ShapeAppearance.16">
        <item name="cornerSize">@dimen/corner_radius_16</item>
    </style>

    <style name="ShapeAppearance.12">
        <item name="cornerSize">@dimen/corner_radius_12</item>
    </style>

    <style name="ShapeAppearance.Top16">
        <item name="cornerSizeTopLeft">@dimen/corner_radius_16</item>
        <item name="cornerSizeTopRight">@dimen/corner_radius_16</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ShapeAppearance.Circle">
        <item name="cornerSize">50%</item>
    </style>

    <!-- Buttons -->

    <style name="Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAppearance">@style/TextAppearance.JBMono.Bold.S16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.32</item>
    </style>

    <style name="Button.Elevated" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.JBMono.Bold.S16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:elevation">12dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.16</item>
    </style>

    <style name="Button.Primary">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/selector_button_primary</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/grey2</item>
    </style>

    <style name="Button.Secondary.Icon">
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="iconSize">24dp</item>
    </style>

    <style name="Button.Image" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="iconGravity">textTop</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@color/black</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Circle</item>
    </style>

    <style name="Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.JBMono.Bold.S16</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Text.Primary">
        <item name="android:textColor">@color/red1</item>
    </style>

    <style name="Button.Text.Secondary">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button.Action" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.JBMono.Bold.S14</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">textStart</item>
        <item name="iconGravity">end</item>
        <item name="iconSize">24dp</item>
    </style>

    <style name="Button.Image.DialogClose">
        <item name="icon">@drawable/ic_close_grey</item>
        <item name="iconTintMode">screen</item>
        <item name="iconTint">@android:color/transparent</item>
        <item name="iconSize">24dp</item>
    </style>

    <style name="Button.DeleteRed">
        <item name="android:minHeight">52dp</item>
        <item name="backgroundTint">@color/red2</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <!-- Cards -->

    <style name="Card" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/ShapeAppearance.16</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Card.Flat">
        <item name="cardElevation">0dp</item>
    </style>

    <style name="Card.Elevated4">
        <item name="cardElevation">4dp</item>
    </style>

    <style name="Card.Elevated8">
        <item name="cardElevation">8dp</item>
    </style>

    <style name="Card.Elevated12">
        <item name="cardElevation">12dp</item>
    </style>

    <style name="Card.Elevated16">
        <item name="cardElevation">16dp</item>
    </style>

    <style name="Card.TopRounded">
        <item name="shapeAppearance">@style/ShapeAppearance.Top16</item>
    </style>

    <style name="CardFilled" parent="Widget.Material3.CardView.Filled">
        <item name="shapeAppearance">@style/ShapeAppearance.16</item>
    </style>

    <style name="CardFilled.BottomSheetDialogTopLine">
        <item name="cornerSize">11dp</item>
        <item name="android:backgroundTint">@color/grey6</item>
    </style>

    <!-- TextInputLayout -->

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.16</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundColor">@color/grey2</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextColor">@color/red2</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="hintTextColor">@color/black</item>
    </style>

    <style name="TextInputLayout.Search">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox
        </item>
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="expandedHintEnabled">false</item>
        <item name="startIconDrawable">@drawable/ic_search</item>
        <item name="startIconTint">@color/grey1</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/grey1</item>
    </style>

    <!-- TabLayout -->

    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/grey3</item>
        <item name="tabBackground">@color/grey3</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabIndicator">@drawable/bg_tab_indicator</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIndicatorGravity">center</item>
        <item name="tabIndicatorHeight">36dp</item>
        <item name="tabMode">scrollable</item>
        <item name="tabSelectedTextColor">@color/red1</item>
        <item name="tabTextAppearance">@style/TextAppearance.JBMono.Bold.S16</item>
        <item name="tabTextColor">@color/black</item>
