    <style name="TabLayout.SegmentedPicker">
        <item name="android:background">@drawable/bg_segmented_picker</item>
        <item name="tabBackground">@android:color/transparent</item>
        <item name="tabIndicator">@drawable/bg_segmented_picker_indicator</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextAppearance">@style/TextAppearance.JBMono.Bold.S14</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabSelectedTextColor">@color/black</item>
    </style>

    <style name="TabLayout.ViewPagerIndicator">
        <item name="android:background">@android:color/transparent</item>
        <item name="tabBackground">@drawable/bg_vp_indicator_default</item>
        <item name="tabIndicator">@drawable/bg_vp_indicator_selected</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorHeight">4dp</item>
    </style>

